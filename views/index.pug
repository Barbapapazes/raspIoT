extends layout

block content
  div(class="main")
    h1 Welcome to #{title}
    div(class="subtitle") from #{compagny}

    a(href="/controls") Acess to controles
    label(for="chk") Check
    input(type="checkbox" id="chk")
    label(for="press") Press
    input(type="checkbox" id="press")
  script(src="/socket.io/socket.io.js")
  script.
    var socket = io('10.188.245.31:3000/');
    socket.on('socketToMe', function (data) {
      console.log(data);
      
    });
    document.querySelector('#chk').addEventListener('click', function(event) {
      socket.emit('click', '')
    })
    document.querySelector('#press').addEventListener('click', function(event) {
      socket.emit('press', '')
    })
    socket.emit('connection', 'user')
